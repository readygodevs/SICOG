@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.Ma_PolizasModel>

@{
    Layout = null;
    var imagePath = Server.MapPath("~/Images");
    var cssPath = Server.MapPath("~/Content");
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Analítico Pólizas</title>
    <link href="@cssPath/reporteGeneral.css" rel="stylesheet" />
</head>
<body>
    <div class="cabecera">
        <div class="logo">
            <img src="@imagePath/reportes/@TesoreriaVS12.Models.Logueo.GetParametro("EscudoReportes")" class="logo-ente" alt="" />
        </div>
        <div class="parametros">
            <div class="gobierno">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo1")</div>
            <div class="instituto">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo2")</div>
            <div class="ejercicio">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo3")</div>
            <div class="sistema">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo4")</div>
        </div>
        <div class="poliza">
            ANALÍTICO DE PÓLIZAS
        </div>
    </div>
    <table id="tbl" class="table table-responsive table-striped table-bordered col-sm-12">
        <thead>
            <tr>
                <th class="text-left" style="padding-right:10px;width:100px">Póliza</th>
                <th class="text-left" style="padding-right:10px;width:250px">Tipo Contrarecibo</th>
                <th class="text-left" style="padding-right:10px;width:250px">Cuenta Bancaria</th>
                <th class="text-left" style="padding-right:10px;width:500px">@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th class="text-left" style="padding-right:10px;width:100px">@Html.DisplayNameFor(model => model.Fecha)</th>
                <th class="text-right" style="padding-right:10px;width:100px">Importe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @TesoreriaVS12.Areas.Tesoreria.Models.StringID.PolizasFormato(item.Id_TipoPoliza, item.Id_MesPoliza, item.Id_FolioPoliza)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ca_TipoContrarecibo.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ca_CuentasBancarias.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.Encode(item.Fecha.ToShortDateString())
                    </td>
                    <td class="text-right">
                        @if (item.Cargos.HasValue)
                        {
                            @Html.Encode(item.Cargos.Value.ToString("N")) 
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

