        var RutaDelete = "@Url.Action("V_ConceptoIngresosEliminar", "Catalogos")";//"/Tesoreria/Catalogos/V_ConceptoIngresosEliminar";
        var RutaEdit = "@Url.Action("V_ConceptoIngresosEditar", "Catalogos")";//"/Tesoreria/Catalogos/V_ConceptoIngresosEditar";
        var RutaSave = "@Url.Action("V_ConceptoIngresosAgregar", "Catalogos")";//"/Tesoreria/Catalogos/V_ConceptoIngresosAgregar";
        var RutaDetalles = "@Url.Action("V_ConceptoIngresosDetalles", "Catalogos")";//"/Tesoreria/Catalogos/V_ConceptoIngresosDetalles";
        var RutaExportarPDF = "@Url.Action("ConceptoIngresos", "ReportesPDF")";//"/Tesoreria/ReportesPDF/ConceptoIngresos";
        var TableId = "tbl";
