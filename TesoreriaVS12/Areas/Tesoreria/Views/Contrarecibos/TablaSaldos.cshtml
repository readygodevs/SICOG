@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.De_ContrarecibosModel>

@{
    Layout = null;
}
@{double cargo = 0;}
<table id="tblSaldos" class="table table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th data-title="item.Ca_Cuentas.Id_CuentaFormato" style="width: 179px;">
                <label>Cuenta</label>
            </th>
            <th data-title="item.Ca_Cuentas.Descripcion">
                <label>Descripción Cuenta</label>
            </th>
            <th data-title="Importe" class="text-right" style="width: 85px">
                <label>Importe</label>
            </th>
            <th data-title="Acciones" class="col-sm-1">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ca_Cuentas.Id_CuentaFormato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ca_Cuentas.Descripcion)
                </td>
                <td align="right">
                        @Html.Encode(String.Format("{0:n}", item.Importe))
                        @{ cargo = cargo + Convert.ToDouble(item.Importe); }
                </td>
                <td class="acciones">
                    <a class="fa fa-trash-o js_eliminar cursorPointer" data-idFolio="@item.Id_FolioCR"  data-idTipo="@item.Id_TipoCR" data-id="@item.Id_Registro"  title="Eliminar" data-toggle="tooltip" data-placement="top"></a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <th colspan="2" style="text-align: right">Total:</th>
            <th class="text-right">
                <!--<label>@cargo</label>-->
            </th>
            <th></th>
        </tr>
    </tfoot>

</table>
