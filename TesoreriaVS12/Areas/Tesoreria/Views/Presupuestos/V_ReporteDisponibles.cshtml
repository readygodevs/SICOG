@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.VW_DisponibilidadMeses>

@{
    Layout = null;
    decimal Total01 = 0;
    decimal Total02 = 0;
    decimal Total03 = 0;
    decimal Total04 = 0;
    decimal Total05 = 0;
    decimal Total06 = 0;
    decimal Total07 = 0;
    decimal Total08 = 0;
    decimal Total09 = 0;
    decimal Total10 = 0;
    decimal Total11 = 0;
    decimal Total12 = 0;

    ViewBag.Title = "Disponibilidad Meses";
    var imagePath = Server.MapPath("~/Images");
    var cssPath = Server.MapPath("~/Content");
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>reporteGeneral</title>
    <link href="@cssPath/reporteGeneral.css" rel="stylesheet" />
</head>
<body>
    <div class="cabecera">
        <div class="logo">
            <img src="@imagePath/reportes/@TesoreriaVS12.Models.Logueo.GetParametro("EscudoReportes")" class="logo-ente" alt="" />
        </div>
        <div class="parametros">
            <div class="gobierno">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo1")</div>
            <div class="instituto">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo2")</div>
            <div class="ejercicio">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo3")</div>
            <div class="sistema">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo4")</div>
        </div>
        <div class="poliza">
            REPORTE DE DISPONIBLE POR MESES 
        </div>
    </div>
    <style>
        #tblAprobado{
            font-size:9px !important;
        }
    </style>
    <table class="tablaGrande" id="tblAprobado">
        <thead>
            <tr>
                <th>
                    Clave Presupuestaria
                </th>
                <th class="text-right">
                    Enero
                </th>
                <th class="text-right">
                   Febrero
                </th>
                <th class="text-right">
                   Marzo
                </th>
                <th class="text-right">
                    Abril
                </th>
                <th class="text-right">
                   Mayo
                </th>
                <th class="text-right">
                    Junio
                </th>
                <th class="text-right">
                    Julio
                </th>
                <th class="text-right">
                    Agosto
                </th>
                <th class="text-right">
                   Septiembre
                </th>
                <th class="text-right">
                    Octubre
                </th>
                <th class="text-right">
                    Noviembre
                </th>
                <th class="text-right">
                   Diciembre
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Total)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @*@Html.Encode(item.Id_ClavePresupuesto)*@
                        @Html.Encode(TesoreriaVS12.Areas.Tesoreria.Models.StringID.IdClavePresupuestoFormato(item.Id_ClavePresupuesto).Trim())
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible01))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible02))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible03))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible04))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible05))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible06))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible07))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible08))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible09))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible10))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible11))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Disponible12))
                    </td>
                    <td class="text-right">
                        @Html.Encode(String.Format("{0:N}", item.Total))
                    </td>
                </tr>
                Total01 += item.Disponible01.HasValue ? item.Disponible01.Value : 0;
                Total02 += item.Disponible02.HasValue ? item.Disponible02.Value : 0;
                Total03 += item.Disponible03.HasValue ? item.Disponible03.Value : 0;
                Total04 += item.Disponible04.HasValue ? item.Disponible04.Value : 0;
                Total05 += item.Disponible05.HasValue ? item.Disponible05.Value : 0;
                Total06 += item.Disponible06.HasValue ? item.Disponible06.Value : 0;
                Total07 += item.Disponible07.HasValue ? item.Disponible07.Value : 0;
                Total08 += item.Disponible08.HasValue ? item.Disponible08.Value : 0;
                Total09 += item.Disponible09.HasValue ? item.Disponible09.Value : 0;
                Total10 += item.Disponible10.HasValue ? item.Disponible10.Value : 0;
                Total11 += item.Disponible11.HasValue ? item.Disponible11.Value : 0;
                Total12 += item.Disponible12.HasValue ? item.Disponible12.Value : 0;
            }
            <tr class="tfoot">
                <td class="text-right"><b>Total</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total01)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total02)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total03)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total04)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total05)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total06)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total07)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total08)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total09)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total10)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total11)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total12)</b></td>
                <td class="text-right totales"><b>@String.Format("{0:n}", Total01 + Total02 + Total03 + Total04 + Total05 + Total06 + Total07 + Total08 + Total09 + Total10 + Total11 + Total12)</b></td>
            </tr>
        </tbody>
    </table>
</body>
</html>
