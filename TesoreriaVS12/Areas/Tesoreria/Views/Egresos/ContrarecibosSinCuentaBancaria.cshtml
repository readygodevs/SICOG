@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.VW_contrarecibosSinFuente>

@{
    ViewBag.Title = "ContrarecibosSinCuentaBancaria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="_menu_lateral">
    @{ Html.RenderAction("Botonera", "Home", new { Area = "", ids = new List<object> { "bImprimir", "bSalir" } }); }
</div>
<h2>Cuentas por Liquidar sin Cuenta Bancaria</h2>

<table id="tblContraRecibos" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tipo Contrarecibo</th>
            <th>Folio</th>
            <th>Fecha de Captura</th>
            <th>Beneficiario</th>
            <th>Descripción</th>
            <th>Fecha de Vencimiento</th>
            <th>Importe</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @String.Format("{0}",TesoreriaVS12.Areas.Tesoreria.Models.Diccionarios.ListaTiposContrarecibos[item.Id_TipoCR])
                </td>
                <td>
                    @item.Id_FolioCR
                </td>
                <td>
                    @if (item.FechaVen.HasValue)
                    {
                        @item.FechaCR.Value.ToShortDateString()
                    }
                    
                </td>
                <td>
                    @item.Nombre
                </td>
                <td>
                    @item.Descripcion
                </td>
                <td>
                    @if (item.FechaVen.HasValue)
                    {
                        @item.FechaVen.Value.ToShortDateString()
                    }
                </td>
                <td>
                    @String.Format("{0:N}",item.Cargos)
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script type="text/javascript">
        $(document).on("ready", function () {
            ConstruirTabla("tblContraRecibos", "", 1, false);
            $("#js_mImprimir").on("click", function () {
                window.open("@Url.Action("ReporteContrarecibosSinCuenta","Egresos")","_blank");
            });
            $("body").on("click", "#js_mSalir", function () {
                GoHome();
                return false;
            });
        });
    </script>
}