@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.Ca_GirosModel>

@{
    Layout = null;
}
    <table id="tblmodalgiros">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_GiroComercial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>Acciones</th>
        </tr>
        </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_GiroComercial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td class="acciones">
                <i data-id="@item.Id_GiroComercial" data-desc="@item.Descripcion" class="fa fa-check cursorPointer js_tblmodalgiros" title="Seleccionar" data-toggle="tooltip" data-placement="top"></i>
            </td>
        </tr>
    }
    </tbody>
    </table>

<script>
    $(document).ready(function () {
        ConstruirTabla("tblmodalgiros", "No hay giros");
        
    });

</script>