@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.Ca_ClasificaBeneficiariosModel>
@{
    ViewBag.Title = "Catálogo de Clasificación de Beneficiarios";
    Layout = null;
    var imagePath = Server.MapPath("~/Images");
    var cssPath = Server.MapPath("~/Content");
}
<link href="@cssPath/bootstrap.min.css" rel="stylesheet" />
<link href="@cssPath/jquery.dataTables.min.css" rel="stylesheet" />
<link href="@cssPath/font-awesome.min.css" rel="stylesheet" />
<link href="@cssPath/layout.css" rel="stylesheet" />
@Html.Partial("PdfHeader")
<table id="tbl" class="table table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th data-title="Descripcion">
                Descripción
            </th>
            <th data-title="Ca_Cuentas.Id_CuentaFormato">
                Cuenta
            </th>
            <th data-title="Ca_Cuentas.Nivel">
                @Html.DisplayNameFor(model => model.Ca_Cuentas.Nivel)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ca_Cuentas.Id_CuentaFormato)
                </td>
                <td>
                    @{
            if (item.Ca_Cuentas.Nivel == true)
            {
                @Html.Encode("SI");
            }
            else
            {
                @Html.Encode("NO");
            }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>