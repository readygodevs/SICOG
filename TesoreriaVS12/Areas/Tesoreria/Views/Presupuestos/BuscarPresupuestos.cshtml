@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.MA_PresupuestoEg>
<table id="tabla_presupuestos" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center" width="400px">
                Clave Presupuestaria
            </th>
            <th class="text-center">
                Importe Total
            </th>
            <th class="text-center">
                Fecha Aprobado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-left">
                    @Html.Encode(TesoreriaVS12.Areas.Tesoreria.Models.StringID.IdClavePresupuestoFormato(item.Id_ClavePresupuesto))
                    @*@Html.DisplayFor(modelItem => item.Id_ClavePresupuesto)*@
                </td>
                <td class="text-right">
                    @String.Format("{0:N}", item.Total)
                </td>
                <td class="text-center">
                    @if (item.Fecha_Aprobado.HasValue)
                    {
                        @Html.Encode(item.Fecha_Aprobado.Value.ToShortDateString());
                    }
                    else
                    {
                        Html.Display("");
                    }

                </td>
                <td class="text-center">
                    <i class="fa fa-check js_seleccionarPresupuesto acciones cursorPointer" data-clavepresupuesto="@item.Id_ClavePresupuesto"></i>
                </td>
            </tr>
        }
    </tbody>
</table>
