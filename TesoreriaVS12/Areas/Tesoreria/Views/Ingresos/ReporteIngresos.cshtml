@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.VW_DetalleReciboIngModel>

@{
    Layout = null;
    var imagePath = Server.MapPath("~/Images");
    var cssPath = Server.MapPath("~/Content");
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Analítico de Recibo de Ingresos</title>
    <link href="@cssPath/reporteGeneral.css" rel="stylesheet" />
</head>
<body>
    <div class="cabecera">
        <div class="logo">
            <img src="@imagePath/reportes/@TesoreriaVS12.Models.Logueo.GetParametro("EscudoReportes")" class="logo-ente" alt="" />
        </div>
        <div class="parametros">
            <div class="gobierno">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo1")</div>
            <div class="instituto">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo2")</div>
            <div class="ejercicio">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo3")</div>
            <div class="sistema">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo4")</div>
        </div>
        <div class="poliza">
            ANALÍTICO DE RECIBO DE INGRESOS
        </div>
    </div>
    <table id="tblIngresos" class="table table-responsive table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-left" width="100px">Folio</th>
                <th class="text-left" width="100px">Fecha de Captura</th>
                <th class="text-left" width="350px">Contribuyente</th>
                <th class="text-left" width="250px">Cuenta Bancaria</th>
                <th class="text-left" width="150px">Fecha de Recaudación</th>
                <th class="text-left" width="150px">Estatus</th>
                <th class="text-right" width="100px">Importe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Folio)</td>
                    <td>@item.Fecha.ToShortDateString()</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreContribuyente)</td>
                    <td>@Html.DisplayFor(modelItem => item.CuentaBancaria)</td>
                    @if (item.FechaRecaudacion.HasValue)
                    {
                        <td>@item.FechaRecaudacion.Value.ToShortDateString()</td>
                    }
                    else
                    {
                        <td></td>
                    }
                    <td>@Html.DisplayFor(modelItem => item.DescripcionEstatus)</td>
                    <td class="text-right" style="padding-left:40px"><b>@String.Format("{0:N}", item.Importe)</b></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
