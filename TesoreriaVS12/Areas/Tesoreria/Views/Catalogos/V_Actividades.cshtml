@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.Ca_ActividadModel>

@{
    ViewBag.Title = "Actividad MIR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="_menu_lateral">
    @{ Html.RenderAction("Botonera", "Home", new { Area = "", ids = new List<object> { "bImprimir","bSalir" } }); }
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Catálogo de Actividad MIR</h2>
            <!--<a id="js_agregar" class="btn btn-success" href="#"><i class="fa fa-plus">Agregar</i></a>-->
            <div class="jsSourceActions hide"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table id="tbl" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th data-title="Id_Proceso">
                            @Html.DisplayNameFor(model => model.Id_Proceso)
                        </th>
                        <th data-title="Id_Proceso">
                            @Html.DisplayNameFor(model => model.DescripcionProceso)
                        </th>
                        <th data-title="Id_ActividadMIR2">
                            @Html.DisplayNameFor(model => model.Id_ActividadMIR2)
                        </th>
                        <th data-title="Descripcion">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th data-title="Acciones" class="text-center">
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id_Proceso)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CA_Proyecto.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id_ActividadMIR2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td class="acciones">
                                <!--<a class="fa fa-pencil js_editar cursorPointer" data-id="@item.Id_ActividadMIR" title="Editar" data-toggle="tooltip" data-placement="top"></a>
                                <a class="fa fa-trash js_eliminar cursorPointer" data-id="@item.Id_ActividadMIR" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>-->
                                <a class="fa fa-bars js_detalles cursorPointer" data-id="@item.Id_ActividadMIR2" data-id2="@item.Id_Proceso" title="Detalles" data-toggle="tooltip" data-placement="top"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/underscore.js"></script>
    <script src="~/Areas/Tesoreria/Scripts/Catalogos/Catalogos.js"></script>
    <script>
        var aPos = -1;
        var RutaAdd = "@Url.Action("V_AgregarActividad", "Catalogos")";//"/Tesoreria/Catalogos/V_AgregarActividad";
        var RutaObtener = "@Url.Action("V_ObtenerActividad", "Catalogos")";//"/Tesoreria/Catalogos/V_ObtenerActividad";
        var RutaDelete = "@Url.Action("EliminarActividad", "Catalogos")";//"/Tesoreria/Catalogos/EliminarActividad";
        var RutaEdit = "@Url.Action("EditarActividad", "Catalogos")";//"/Tesoreria/Catalogos/EditarActividad";
        var RutaSave = "@Url.Action("AgregarActividad", "Catalogos")";//"/Tesoreria/Catalogos/AgregarActividad";
        var RutaDetalles = "@Url.Action("V_DetallesActividad", "Catalogos")";//"/Tesoreria/Catalogos/V_DetallesActividad";
        var RutaExportarPDF = "@Url.Action("Actividades", "ReportesPDF")";//"/Tesoreria/ReportesPDF/Actividades";
        var TableId = "tbl";
        var FrmId = "frm";
        var Propiedades = '{ "Id": "response.Registro.Id_ActividadMIR" }';
        var MsjEliminar = "¿Esta seguro de eliminar el registro? esta acción no se puede deshacer";
        var tabla = "";
        var SourceAction = "jsActionsource";

        $(function () {
            $("body").on("click", "#js_mImprimir", ExportarPDFCatalogo);
            tabla = ConstruirTabla(TableId, "No hay actividades...");
            $("body").tooltip({ selector: "[data-toggle='tooltip']" });
            $("body").on("click", "#js_agregar", Nuevo);
            $("body").on("click", ".js_editar", Obtener);
            $("body").on("click", ".js_eliminar", Eliminar);
            $("body").on("click", ".js_detalles", function () {
                ajaxLoad(RutaDetalles, { Id: $(this).data("id"), Proceso: $(this).data("id2") }, "MyModal1 .modal-body", "GET", openModal);
            });
            $("body").on("click", "#Save", Guardar);
            $("body").on("click", "#Edit", Editar);
            $("body").on("click", "#js_mSalir", function () {
                GoHome();
                return false;
            });
        });
    </script>

    <script type="text/template" id="jsActionsource">
        <a class="fa fa-pencil js_editar cursorPointer" data-id="<%= Id %>" title="Editar" data-toggle="tooltip" data-placement="top"> </a>
        <a class="fa fa-trash js_eliminar cursorPointer" data-id="<%= Id %>" title="Eliminar" data-toggle="tooltip" data-placement="top"> </a>
        <a class="fa fa-bars js_detalles cursorPointer" data-id="<%= Id %>" title="Detalles" data-toggle="tooltip" data-placement="top"> </a>
    </script>

}

