@model TesoreriaVS12.Areas.Tesoreria.Models.Ca_AccionesModel
<div data-title="Agregar Acción u Obra" class="TituloModal"></div>
<div data-text="Guardar" class="btnOk"></div>
<div data-text="Cancelar" class="btnCancel"></div>
<form id="frm">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-xs-12">
            Proyecto/Proceso
        </div>
        <div class="col-xs-4">
            <div class="input-group">
                @Html.TextBoxFor(model => model.Id_Proceso, new { @class = "form-control js_Captura", @objeto = "6" })
                <span class="input-group-addon js_Buscar">
                    <span class="fa fa-search"></span>
                </span>
            </div>
        </div>
        <div class="col-xs-8">
            <div class="col-xs-11">
                @Html.TextBox("descProceso", "", new { @class = "form-control js_Descripcion", @disabled = "disabled" })
            </div>
            <div class="col-xs-1">
                @Html.ValidationMessageFor(model => model.Id_Proceso)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            Actividad MIR
        </div>
        <div class="col-xs-4">
            <div class="input-group">
                @Html.TextBoxFor(model => model.Id_ActividadMIR2, new { @class = "form-control js_Captura", @objeto = "9" })
                <span class="input-group-addon js_Buscar">
                    <span class="fa fa-search"></span>
                </span>
            </div>
        </div>
        <div class="col-xs-8">
            <div class="col-xs-11">
                @Html.TextBox("descActividadMir", "", new { @class = "form-control js_Descripcion", @disabled = "disabled" })
            </div>
            <div class="col-xs-1">
                @Html.ValidationMessageFor(model => model.Id_ActividadMIR2)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            Clave Acción
        </div>
        <div class="col-xs-4">
            @Html.TextBoxFor(model => model.Id_Accion2, new { @class = "form-control",maxlength = 3 })
        </div>
        <div class="col-xs-1">
            @Html.ValidationMessageFor(model => model.Id_Accion2)
        </div>
    </div>
    <div class="row">
        <div class="col-xs-11">
            Descripción
        </div>
        <div class="col-xs-12">
            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control",@maxlength = 150 })
        </div>
        <div class="col-xs-1">
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>
    </div>
</form>
