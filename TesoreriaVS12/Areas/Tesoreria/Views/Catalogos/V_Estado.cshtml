@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.Ca_EstadosModel>

@{
    ViewBag.Title = "Estados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Catálogo de Estados</h2>
<div id="_menu_lateral">
    @{ Html.RenderAction("Botonera", "Home", new { Area = "", ids = new List<object> { "bNuevo","bImprimir", "bSalir" } }); }
</div>
<div class="jsSourceActions hide">
</div>
<div id="container">
    <br />
    <div class="row">
        @*<div class="col-sm-3 col-sm-offset-9 text-right">
            <div class="js_agregar btn btn-success">
                <i class="fa fa-plus bigger-110" title="Crear"></i>
                <span>Agregar</span>
            </div>
        </div>*@
    </div>

    <div class="row">
        <div class="col-sm-12">
            <table id="tbl" class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>

                        <th data-title="Descripcion">
                            Descripción
                        </th>
                        <th data-title="Acciones" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>

                            <td class="acciones">
                                <a class="js_editar fa fa-pencil-square-o cursorPointer" data-id="@item.Id_Estado" title="Editar" data-toggle="tooltip" data-placement="top"></a>
                                <a class="js_eliminar fa fa-trash-o cursorPointer" data-id="@item.Id_Estado" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/underscore.js"></script>
    <script src="~/Scripts/Catalogos/Usuarios.js"></script>
    <script>
        var aPos = -1;
        var RutaAdd = "@Url.Action("V_Estado_Agregar", "Catalogos")";//"/Tesoreria/Catalogos/V_Estado_Agregar";
        var RutaEdit = "@Url.Action("V_Estado_Editar", "Catalogos")";//"/Tesoreria/Catalogos/V_Estado_Editar";
        var RutaDelete = "@Url.Action("V_Estado_Eliminar", "Catalogos")";//"/Tesoreria/Catalogos/V_Estado_Eliminar";
        var RutaDetail = "@Url.Action("V_Estado_Detalles", "Catalogos")";//"/Tesoreria/Catalogos/V_Estado_Eliminar";
        var TableId = "tbl";
        var FrmId = "frm";
        var Propiedades = '{ "Id": "response.Registro.Id_Estado" }';
        var MsjEliminar = "¿Esta seguro de eliminar el estado? esta acción no se puede deshacer";
        var SourceAction = "jsActionsource";
        var TituloModalAdd = "Agregar Estados";
        var RutaExportarPDF = "@Url.Action("Estados", "ReportesPDF")";//"/Tesoreria/ReportesPDF/Estados";
        var ExportarPDFCatalogo = function () {
            window.open(RutaExportarPDF, "_blank");
        }
        $(function () {
            $(document).keydown(function (event) {
                //return false;
            });
            $("#MyModal1").on("show.bs.modal", function () {
                setTimeout(function () { $("#Descripcion").focus(); }, 1000);
                $("#Descripcion").keydown(function (event) {
                    //console.log(event.which);
                    if (event.which == 13) {
                        //Guardar;
                        return false;
                    }
                });
            });
            $("body").on("click", "#js_mImprimir", ExportarPDFCatalogo);
            ConstruirTabla(TableId, "No hay estados...");
            $("body").on("click", "#js_mNuevo", Nuevo);
            $("body").on("click", ".js_editar", Editar);
            $("body").on("click", ".js_eliminar", Eliminar);
            $("body").on("click", ".js_detalles", function () {
                VentanaModal(1, RutaDetail, { Id: $(this).data("id") }, "get", "");
            });
            $("body").on("click", "#js_mSalir", function () {
                GoHome();
                return false;
            });
        });
    </script>

    <script type="text/template" id="jsActionsource">
        <a class="js_editar fa fa-pencil-square-o cursorPointer" data-id="<%= Id %>" title="Editar" data-toggle="tooltip" data-placement="top"></a>
        <a class="js_eliminar fa fa-trash-o cursorPointer" data-id="<%= Id %>" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>
    </script>

}
