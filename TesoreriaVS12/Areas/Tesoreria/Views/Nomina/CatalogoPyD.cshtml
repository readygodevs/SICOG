@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.Ca_Percep_Deduc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    String Exito = ViewBag.Exito;
}

<h2>Catálogo de Percepciones y Deducciones</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="msg success">Cargar Documento de Percepciones y Deducciones en Excel</div>
        <br />
        @using (Html.BeginForm("ProcesarCatalogoPyD", "Nomina", new { @area = "Tesoreria" }, FormMethod.Post, new { id = "frmCatalogo", enctype = "multipart/form-data" }))
        {
            if (!String.IsNullOrEmpty(Exito))
            {
            <label>Catálogo importado con éxito</label>
                  
            }
            @Html.ValidationSummary(true)
            <div class="row">
                <div class="col-lg-5">
                    <label>Archivo:</label><br />
                    <input id="uploadFile" placeholder="Elija un archivo" disabled="disabled" />
                    <div class="fileUpload btn btn-primary">
                        <span>Examinar</span>
                        <input type="file" id="archivoExcel" name="archivoExcel" class="upload" />
                    </div>
                    <br />
                </div>
                <div class="col-xs-2">
                    <a class="btn btn-success margin-25" id="btnImportar">Importar</a>
                </div>
            </div>
        }
    </div>
</div>
<table id="tablaCatalogo" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">Clave</th>
            <th class="text-center">Concepto</th>
            <th class="text-center">Objeto de Gasto</th>
            <th class="text-center">Cuenta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Percep_Deduc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Id_ObjetoG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Cuenta)
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script type="text/javascript">
        $(document).on("ready", function () {
            ConstruirTabla("tablaCatalogo");
            $("#btnImportar").on("click", function () {
                if ($("#archivoExcel").val() != "") {
                    ConfirmCustom("Por favor confirme que desea importar el archivo de Percepciones y Deducciones, <b>se podrían perder los cambios en el OBJETO DE GASTO Y DE CUENTA</b>",
                        function () {
                            $("#frmCatalogo").submit();
                        }, "", "Aceptar", "Cancelar");
                }
            });
            document.getElementById("archivoExcel").onchange = function () {
                document.getElementById("uploadFile").value = this.value;
            };
        });
    </script>
}