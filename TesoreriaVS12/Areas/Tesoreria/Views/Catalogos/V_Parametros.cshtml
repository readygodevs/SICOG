</div>
<div id="_menu_lateral">
    @{ Html.RenderAction("Botonera", "Home", new { Area = "", ids = new List<object> { "bSalir" } }); }
</div>
<div id="container">
    <br />
    @*<div class="row">
            <div class="col-sm-3 col-sm-offset-9 text-right">
                <div class="js_agregar btn btn-success">
                    <i class="fa fa-plus bigger-110" title="Crear"></i>
                    <span>Agregar</span>
                </div>
            </div>
        </div>*@

    <div class="row">
        <div class="col-sm-12">
            <table id="tbl" class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        @*<th data-title="Nombre">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>*@
                        <th data-title="Descripcion">
                            Descripción
                        </th>
                        <th data-title="Valor">
                            @Html.DisplayNameFor(model => model.Valor)
                        </th>
                        <th data-title="Acciones" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valor)
                            </td>
                            <td class="acciones">
                                @if (item.Nombre != "Titulo1" && item.Nombre != "Titulo3")
                                {
                                    @*<a class="js_detalles fa fa-file-text-o cursorPointer" data-id="@item.Id_Municipio" data-idestado="@item.Id_Estado" title="Detalles" data-toggle="tooltip" data-placement="top"></a>*@
                                    <a class="js_editar fa fa-pencil-square-o cursorPointer" data-id="@item.IdParametro" title="Editar" data-toggle="tooltip" data-placement="top"></a>
                                    @* <a class="js_eliminar fa fa-trash-o cursorPointer" data-id="@item.Id_Municipio" data-idestado="@item.Id_Estado" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>*@
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/underscore.js"></script>
    <script src="~/Scripts/Catalogos/Usuarios.js"></script>
    <script>
        var aPos = -1;
        var RutaAdd = "@Url.Action("V_Municipio_Agregar", "Catalogos")";//"/Tesoreria/Catalogos/V_Municipio_Agregar";
        var RutaEdit = "@Url.Action("V_Parametros_Editar", "Catalogos")";//"/Tesoreria/Catalogos/V_Parametros_Editar";
        var RutaDelete = "@Url.Action("V_Municipio_Eliminar", "Catalogos")";//"/Tesoreria/Catalogos/V_Municipio_Eliminar";
        var TableId = "tbl";
        var FrmId = "frm";
        var Propiedades = '{ "Id": "response.Registro.IdParametro"}';
        var MsjEliminar = "¿Esta seguro de eliminar el Municipio? esta acción no se puede deshacer";
        var SourceAction = "jsActionsource";

        $(function () {
            ConstruirTabla(TableId, "No hay Municipios...");
            $("body").tooltip({ selector: "[data-toggle='tooltip']" });
            $("body").on("click", ".js_agregar", Nuevo);
            $("body").on("click", ".js_editar", function () {
                aPos = $("#" + TableId).dataTable().fnGetPosition($(this).parent().parent().get(0));
                ajaxLoad(RutaEdit, { IdParametro: $(this).data("id") }, "MyModal1 .modal-body", "GET", openModal);
            });
            $("body").on("click", ".js_eliminar", function () { Eliminar({ IdEstado: $(this).data("idestado"), IdMunicipio: $(this).data("id") }, $(this)); });
            $("body").on("click", ".js_detalles", function () {
                customModal("@Url.Action("V_Municipio_Detalles","Catalogos")", { IdEstado: $(this).data("idestado"), IdMunicipio: $(this).data("id") }, "GET", "md", "", "", "", "Cerrar", "Detalle Municipio", "IdModal")
            });
            $("#MyModal1").on("click", "#js_btnOk1", GuadarEditar);
            $("body").on("click", "#js_mSalir", function () {
                GoHome();
                return false;
            });
        });
        function GuadarEditar() {
            if ($("#IdParametro").val() == 0) {
                if ($("#" + FrmId).valid()) {
                    ajaxJson(RutaAdd, $("#" + FrmId).serialize(), "POST", true, callBackSave);
                }
            }
            else {
                if ($("#Nombre").val() == "EscudoReportes") {
                    if ($("#file").val() == "")
                        ErrorCustom("Debe seleccionar un archivo.");
                    else
                        $("#" + FrmId).submit();
                }
                else
                    GuardarEdit();
            }

        }
    </script>

    <script type="text/template" id="jsActionsource">

        <a class="js_editar fa fa-pencil-square-o cursorPointer" data-id="<%= Id %>" title="Editar" data-toggle="tooltip" data-placement="top"></a>

    </script>
    @*<a class="js_detalles fa fa-file-text-o cursorPointer" data-id="<%= Id %>"  data-idestado="<%= IdE %>" title="Detalles" data-toggle="tooltip" data-placement="top"></a>
        <a class="js_eliminar fa fa-trash-o cursorPointer" data-id="<%= Id %>" data-idestado="<%= IdE %>" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>*@
}

