@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.CA_InHabilModel>

@{
    ViewBag.Title = "DiasInhabiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/datepicker3.css" rel="stylesheet" />
<h2>Catálogo de Días Inhábiles</h2>
<div id="_menu_lateral">
    @{ Html.RenderAction("Botonera", "Home", new { Area = "", ids = new List<object> { "bNuevo", "bImprimir", "bSalir" } }); }
</div>
<div class="jsSourceActions hide">

</div>
<div id="container">
    <br />
    <div class="row">
        @*<div class="col-sm-3 col-sm-offset-9 text-right">
                <div class="js_agregar btn btn-success">
                    <i class="fa fa-plus bigger-110" title="Crear"></i>
                    <span>Agregar</span>
                </div>
            </div>*@
    </div>

    <div class="row">
        <div class="col-sm-12">
            <table id="tbl" class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        <th data-title="Dia">
                            @Html.DisplayNameFor(model => model.Dia)
                        </th>
                        <th data-title="MesLetra">
                            @Html.DisplayNameFor(model => model.Mes)
                        </th>
                        <th data-title="Descrip">
                            @Html.DisplayNameFor(model => model.Descrip)
                        </th>
                        <th data-title="Acciones" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MesLetra)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descrip)
                            </td>
                            <td class="acciones">
                                <a class="js_detalles fa fa-file-text-o cursorPointer" data-id="@item.Id_Dia" title="Detalles" data-toggle="tooltip" data-placement="top"></a>
                                <a class="js_editar fa fa-pencil-square-o cursorPointer" data-id="@item.Id_Dia" title="Editar" data-toggle="tooltip" data-placement="top"></a>
                                <a class="js_eliminar fa fa-trash-o cursorPointer" data-id="@item.Id_Dia" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/underscore.js"></script>
    <script src="~/Scripts/Catalogos/Usuarios.js"></script>
    <script>
        var aPos = -1;

        Add = "@Url.Action("V_DiasInhabiles_Agregar", "Catalogos")";//"/Tesoreria/Catalogos/V_DiasInhabiles_Agregar";

        Edit = "@Url.Action("V_DiasInhabiles_Editar", "Catalogos")";//"/Tesoreria/Catalogos/V_DiasInhabiles_Editar";
        var RutaDelete = "@Url.Action("V_DiasInhabiles_Eliminar", "Catalogos")";//"/Tesoreria/Catalogos/V_DiasInhabiles_Eliminar";
        var TableId = "tbl";
        var FrmId = "frm";
        var Propiedades = '{ "Id": "response.Registro.Id_Dia" }';
        var MsjEliminar = "¿Esta seguro de eliminar el dia Inhábil? esta acción no se puede deshacer";
        var SourceAction = "jsActionsource";
        var RutaExportarPDF = "@Url.Action("DiasInhabiles", "ReportesPDF")";//"/Tesoreria/ReportesPDF/DiasInhabiles";
        var ExportarPDFCatalogo = function () {
            window.open(RutaExportarPDF, "_blank");
        }
        $(function () {
            $("body").on("click", "#js_mImprimir", ExportarPDFCatalogo);
            ConstruirTabla(TableId, "No hay dias inhabiles...");
            $("body").tooltip({ selector: "[data-toggle='tooltip']" });
            $("body").on("click", "#js_mNuevo", Nuevo);
            $("body").on("click", ".js_editar", Editar);
            $("body").on("click", ".js_eliminar", Eliminar);
            $("body").on("click", ".js_detalles", function () {
                customModal("@Url.Action("V_DiasInhabiles_Detalles","Catalogos")", { Id: $(this).data("id") }, "GET", "md", "", "", "", "Cerrar", "Detalles", "IdModal")
            });
            $("#MyModal1").on("click", "#js_btnOk1", GuadarEditar);
            $("body").on("click", "#js_mSalir", function () {
                GoHome();
                return false;
            });
        });
        function GuadarEditar() {
            if ($("#Id_Dia").val() == 0) {
                if ($("#" + FrmId).valid()) {
                    ajaxJson(RutaAdd, $("#" + FrmId).serialize(), "POST", true, callBackSave);
                }
            }
            else {
                GuardarEdit();
            }

        }
    </script>

    <script type="text/template" id="jsActionsource">
        <a class="js_detalles fa fa-file-text-o cursorPointer" data-id="<%= Id %>" title="Detalles" data-toggle="tooltip" data-placement="top"></a>
        <a class="js_editar fa fa-pencil-square-o cursorPointer" data-id="<%= Id %>" title="Editar" data-toggle="tooltip" data-placement="top"></a>
        <a class="js_eliminar fa fa-trash-o cursorPointer" data-id="<%= Id %>" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>
    </script>

}

