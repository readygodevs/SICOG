@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.Ma_PresupuestoIng>

<table id="tabla_presupuestos" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Clave Presupuesto
            </th>
            <th>
                Total
            </th>
            <th>
                Fecha Estimado
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.Encode(TesoreriaVS12.Areas.Tesoreria.Models.StringID.IdClavePresupuestoIngFormato(item.Id_ClavePresupuesto))</td>
            <td class="text-right">@(item.Total.HasValue ? String.Format("{0:n}", item.Total.Value) : "0.0")</td>
            <td>@(item.Fecha_Estimado.HasValue ? item.Fecha_Estimado.Value.ToString("d/M/yyyy") : "")</td>
            <td class="text-center">
                <i class="fa fa-check js_seleccionarPresupuesto acciones cursorPointer" data-clavepresupuesto="@item.Id_ClavePresupuesto"></i>
            </td>
        </tr>
    }

</table>
