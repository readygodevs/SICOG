@{
    ViewBag.Title = "Importar archivo de Arrendamientos y Honorario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var exito = ViewBag.Exito;
}
<h2>Importar archivo varios</h2>
<div class="row">
    <div class="col-lg-12">
        <label class="label label-success">Cargar archivo en Excel</label><br />
        <br />
        @using (Html.BeginForm("validacion", "ExcelCompromisos", new { @area = "Tesoreria" }, FormMethod.Post, new { id = "frmCompromiso", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <div class="col-lg-12">
                <input type="file" id="archivoExcel" name="archivoExcel" />
                <br />
                <a class="btn btn-success" id="btnImportar">Importar</a>
            </div>
            <div class="col-lg-12">
                <h4>Tipo de acción</h4><br />
                 Validar @Html.RadioButton("options", "false", true) 
                Importar  @Html.RadioButton("options", "true")
            </div>
            <div class="col-lg-12">
                <h4>Tipo de archivo</h4><br />

                Arrendamientos @Html.RadioButton("tipo", "0", true) <br />
                Honorarios Puros @Html.RadioButton("tipo", "1")<br />
                Cancelación de Activos @Html.RadioButton("tipo", "2")<br />
                Honorarios Asimilables @Html.RadioButton("tipo", "3")<br />


                Anticipos y préstamos @Html.RadioButton("tipo", "4", true) <br />
                Cancelación de pasivos @Html.RadioButton("tipo", "5")<br />
                Egresos no presupuestales @Html.RadioButton("tipo", "6")<br />
                Fondos resolventes @Html.RadioButton("tipo", "7")<br />
                Gastos a comprobar @Html.RadioButton("tipo", "8") <br />
                Pago a proveedores @Html.RadioButton("tipo", "9")<br />
                Recibo de ingresos @Html.RadioButton("tipo", "10")<br />
                @*Arrendamientos @Html.RadioButton("tipo", "0")<br />*@
                @*Cancelación de activos @Html.RadioButton("tipo", "9") <br />*@
                @*Honorarios asimilables @Html.RadioButton("tipo", "10")<br />*@
                @*Honrarios puros @Html.RadioButton("tipo", "11")<br />*@
                @*Honorarios Asimilables @Html.RadioButton("tipo", "11")<br />*@
            </div>
        }
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).on("ready", function () {
            $("#btnImportar").on("click", function () {
            //    debugger;
                if ($("#archivoExcel").val() != "") {

                    ConfirmCustom("Por favor confirme que desea importar el archivo",
                        function () {
                            $("#frmCompromiso").submit();
                        }, "", "Aceptar", "Cancelar");
                }
            });
            $("#archivoExcel").on("change", function () {
                if ($(this).val() != "") {
                    var nombre = $(this).val().split(".");
                    var extencion = nombre[nombre.length - 1].toUpperCase();
                    if (extencion != "XLS" && extencion != "XLSX") {
                        $(this).val("");
                        ErrorCustom("Solamente puede subir archivos en Excel", "");
                    }
                    else if (this.files[0].size > 2097152) {
                        ErrorCustom("El archivo no debe ser mayor a 2 MB", "");
                        $(this).val("");
                    }
                }
            });

            @if (exito!=null)
            {
                if (exito) {
                    <text>
            ExitoCustom('El archivo ha sido importado éxito');
            </text>
                }

            }
        });
    </script>
}
