@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.Ca_TipoTransferenciasEgModel>

@{
    ViewBag.Title = "V_TipoTransferenciasEg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Catálogo de Tipos de Transferencia Egresos</h2>
            <!--<a id="js_agregar" class="btn btn-success" href="#"><i class="fa fa-plus">Agregar</i></a>-->
            <div class="jsSourceActions hide"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table id="tbl" class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        <th data-title="Id_TipoGasto">@Html.DisplayNameFor(model => model.Id_Tipotransf)</th>
                        <th data-title="Descripcion">@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th data-title="Automatica">@Html.DisplayNameFor(model => model.Automatica)</th>
                        <th data-title="Acciones" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id_Tipotransf)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @{
                                    if (item.Automatica == true)
                                    { 
                                                @Html.Encode("SI");
                                    }
                                    else
                                    {
                                                @Html.Encode("NO");
                                    }
                                }
                            </td>
                            <td class="acciones">
                                <a class="fa fa-bars js_detalles cursorPointer" data-id="@item.Id_Tipotransf" title="Detalles" data-toggle="tooltip" data-placement="top"></a>
                                <!--<a class="js_editar fa fa-pencil-square-o cursorPointer" data-id="@item.Id_Tipotransf" title="Editar" data-toggle="tooltip" data-placement="top"></a>
                                <a class="js_eliminar fa fa-trash-o cursorPointer" data-id="@item.Id_Tipotransf" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>-->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


