@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.Ca_ConceptosIngresosModel>

@{
    ViewBag.Title = "V_ConceptoIngresos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Catálogo por Rubro Ingreso</h2>
<div id="_menu_lateral">
    @{ Html.RenderAction("Botonera", "Home", new { Area = "", ids = new List<object> { "bImprimir", "bSalir" } }); }
</div>
<div class="jsSourceActions hide"></div>
<div id="container">
    <br />
    <!--<div class="row">
        <div class="col-sm-3 col-sm-offset-9 text-right">
            <i id="js_agregar" class="js_agregar btn btn-success Agregar fa fa-plus bigger-110">Agregar
            </i>
        </div>
    </div>-->
    <div class="row">
        <div class="col-sm-12">
            <table id="tbl" class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        <th data-title="Rubro">@Html.DisplayNameFor(model => model.Rubro)</th>
                        <th data-title="Tipo">@Html.DisplayNameFor(model => model.Tipo) </th>
                        <th data-title="Clase">@Html.DisplayNameFor(model => model.Clase)</th>
                        <th data-title="Id_Concepto">@Html.DisplayNameFor(model => model.Id_Concepto)</th>
                        <th data-title="Descripcion">@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th data-title="UltimoNivel">@Html.DisplayNameFor(model => model.UltimoNivel)</th>
                        <th data-title="Acciones">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rubro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Clase)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id_Concepto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @{
                        if (item.UltimoNivel == true)
                        { 
                                    @Html.Encode("SI");
                        }
                        else
                        {
                                    @Html.Encode("NO");
                        }
                                }
                            </td>
                            <td class="acciones">
                                <!--<a class="js_editar fa fa-pencil-square-o cursorPointer" data-id="@item.Id_Concepto" title="Editar" data-toggle="tooltip" data-placement="top"></a>
                                <a class="js_eliminar fa fa-trash-o cursorPointer" data-id="@item.Id_Concepto" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>-->
                                <a class="js_detalles fa fa-bars cursorPointer" data-id="@item.Id_Concepto" title="Detalles" data-toggle="tooltip" data-placement="top"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

