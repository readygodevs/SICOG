@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.De_TransferenciaModel>

@{
    Layout = null;
}
<table id="tblDetallesTransferencia" class="table table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th>
                <label>Consecutivo</label>
            </th>
            <th>
                <label>Clave Presupuestaria</label>
            </th>
            <th>
                <label>Ampliaciones</label>
            </th>
            <th>
                <label>Reducciones</label>
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    @{decimal total1 = 0, total2 = 0;}
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Consecutivo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_ClavePresupuesto)
                </td>
                <td class="text-right">
                    @if (item.Id_Movimiento == 1) { 
                        @Html.Encode(item.Importe.Value.ToString("N"))
                        total1+=item.Importe.Value;
                    }
                </td >
                <td class="text-right">
                    @if (item.Id_Movimiento == 2) { 
                        @Html.Encode(item.Importe.Value.ToString("N"))
                        total2+=item.Importe.Value;
                    }
                </td>
                <td class="acciones">
                    <a class="fa fa-bars js_seleccionar cursorPointer" data-idtrans="@item.Id_Transferencia"  data-idcon="@item.Id_Consecutivo"  title="Detalles" data-toggle="tooltip" data-placement="top"></a>
                    @if (ViewBag.Estatus == 1 && ViewBag.ppto != null) { 
                        <a class="fa fa-trash-o js_Eliminar cursorPointer" data-idtrans="@item.Id_Transferencia"  data-idcon="@item.Id_Consecutivo" title="Eliminar" data-toggle="tooltip" data-placement="top"></a>
                    }
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2" class="text-right">
                <label>Total:</label>
            </td>
            <td class="text-right">
                $<span id="totalAm">@total1.ToString("N")</span>
            </td>
            <td class="text-right">
                $<span id="totalRed">@total2.ToString("N")</span>
            </td>
            <td></td>
        </tr>
    </tfoot>
</table>
