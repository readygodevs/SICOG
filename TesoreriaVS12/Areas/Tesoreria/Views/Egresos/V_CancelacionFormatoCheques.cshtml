@{
    ViewBag.Title = "V_CancelacionFormatoCheques";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="_menu_lateral">
    @{ Html.RenderAction("Botonera", "Home", new { Area = "", ids = new List<object> {"bSalir" } }); }
</div>
<div class="container">
    <h2>Cancelación Formato de Cheque</h2>
    <br />
    <div class="row">
        <div class="col-sm-4">
            <label>Banco: </label>
            <select id="js_selectBanco" class="form-control">
            </select>
        </div>
        <div class="col-sm-4">
            <label>Cuenta bancaria: </label>
            <select id="js_selectCuenta" class="form-control">
            </select>
        </div>
        <div class="col-sm-4">
            <br />
            <div id="js_cancelar" class="btn btn-success">Cancelar formato</div>
            <div id="js_buscar" class="btn btn-success">Buscar</div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-12 js_grid">
            <div id="jqxgrid">
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Tree/jqxcore.js"></script>
    <script src="~/Scripts/Tree/jqxdata.js"></script>
    <script src="~/Scripts/Tree/jqxbuttons.js"></script>
    <script src="~/Scripts/Tree/jqxscrollbar.js"></script>
    <script src="~/Scripts/Tree/jqxmenu.js"></script>
    <script src="~/Scripts/Tree/jqxgrid.js"></script>
    <script src="~/Scripts/Tree/jqxgrid.sort.js"></script>
    <script src="~/Scripts/Tree/jqxgrid.filter.js"></script>
    <script src="~/Scripts/Tree/jqxgrid.selection.js"></script>
    <script src="~/Scripts/Tree/jqxpanel.js"></script>
    <script type="text/javascript" src="~/Scripts/Tree/jqxcheckbox.js"></script>
    <script src="~/Scripts/Tree/jqxlistbox.js"></script>
    <script src="~/Scripts/Tree/jqxdropdownlist.js"></script>
    <script type="text/javascript" src="~/Scripts/Tree/jqxdatatable.js"></script>
    <script src="~/Scripts/Tree/demos.js"></script>
    <script type="text/javascript">
        $(document).on("ready", function () {
            ajaxSelect("@Url.Action("List_Bancos","Listas")", {}, "POST", true, "js_selectBanco", "", callBackLlenarSelect);
            $("body").on("change", "#js_selectBanco", llenarCuentasBanco);
            $("body").on("change", "#js_selectBancoM", llenarCuentasBancoM);
            $("#js_selectCuenta").on("change", changeSelect);
            $("#js_cancelar").on("click", ModalDescrip);
            $("#js_buscar").on("click", ModalBuscar);
            $("body").on("click", "#js_mSalir", GoHome);
        });
        var jsonChequesDes = {};
        function ModalBuscar()
        {
            customModal("V_ModalBuscarCancelacionFormato", {}, "GET", "lg", Buscar, "", "Buscar", "Cancelar", "Busqueda Cancelación Formato de Cheque", "ModalBuscar");
        }
        function Buscar()
        {
            if ($("#js_selectCuentaM").val() != " " && $("#js_selectCuentaM").val()>0) {
                ajaxLoad("DivTablaBusqueda", { IdBanco: $("#js_selectBancoM").val(), IdCuenta: $("#js_selectCuentaM").val(), Estatus: $("#js_selectEstatusM").val(), inicio: $("#js_desde").val(), fin: $("#js_hasta").val() }, "DivBuscar", "POST", function (result) {
                    ConstruirTabla("tblCheques", "No hay registros para mostrar");
                });
            } else
                ErrorCustom("Seleccione una cuenta bancaria.", "");
           
        }
        function ModalDescrip()
        {
            var selec = $('#jqxgrid').jqxGrid('getselectedrowindexes');
            if (selec.length > 0) {
                customModal("V_ModalDescripCancelacionFormato",{},"GET","md",cancelar,"","Aceptar","Cancelar","Descripción","ModalDescrip");
            }
            else
                ErrorCustom("Debe de seleccionar un cheque.", "");
        }
        function llenarCuentasBanco() {
            ajaxSelect("/Tesoreria/Listas/List_CtaBancaria", { Id_Banco: $(this).val() }, "POST", true, "js_selectCuenta", "", callBackLlenarSelect);
        }
        function llenarCuentasBancoM() {
            ajaxSelect("/Tesoreria/Listas/List_CtaBancaria", { Id_Banco: $(this).val() }, "POST", true, "js_selectCuentaM", "", callBackLlenarSelect);
        }
        function changeSelect() {
            //ajaxLoad("V_TablaCheques", { IdCuenta: $(this).val() }, "js_tablaCheques", "POST", function () { });
            DestroyGrid();
            url = "/Tesoreria/Egresos/ListaDeBancos?IdCuenta=" + $(this).val();
            ConstruirGrid();
        }
        function cancelar() {
            var descrip = $("#Descripcion").val();
            $(".ModalDescrip").modal("hide");
            var selec = $('#jqxgrid').jqxGrid('getselectedrowindexes');
            if (selec.length > 0) {
                for (i = 0; i < selec.length; i++) {
                    var selectedRowData = $('#jqxgrid').jqxGrid('getrowdata', selec[i]);
                    ajaxJson("CancelaFormato", { idCuenta: $("#js_selectCuenta").val(), NoCheque: selectedRowData.No_Cheque, Desc: descrip }, "POST", true, function (result) {
                        if (result.Exito) {
                            //ExitoCustom(result.Mensaje, "");
                            url = "/Tesoreria/Egresos/ListaDeBancos?IdCuenta=" + $("#js_selectCuenta").val();
                            DestroyGrid();
                            ConstruirGrid();
                        }
                        else
                            ErrorCustom(result.Mensaje, "");
                    });
                }
            }
            else
                ErrorCustom("Debe de seleccionar un cheque", "");
        }

        var url = "/Tesoreria/Egresos/ListaChequesDesasignacion?IdCuenta=" + $("#js_selectCuenta").val();
        function DestroyGrid() {
            $('#jqxgrid').jqxGrid('destroy');
            $(".js_grid").append("<div id='jqxgrid'></div>");
        }
        function ConstruirGrid() {
            DestroyGrid();
            $("#jqxgrid").empty();
            var Localization = {
                // separator of parts of a date (e.g. '/' in 11/05/1955)
                '/': "/",
