*
	margin 0
	padding 0
body
	font-family Arial
.contenedor
	width 1100px
	margin auto
	//border 1px solid
.row
	display block
	clear both
.cabecera-reporte
	height 140px
	position relative
.titulo
	font-size 45px
	font-weight bold
	text-align center
	padding-top 50px
	margin-top 30px
.datos-emision
	position absolute
	top 0
	right 0
	width 240px
	.tipo
		font-size 20px
	.emision-vencimiento
		border 1px solid #000
		border-radius 15px
		margin-top 10px
		font-size 14px
		.f-emision,
		.f-vencimiento
			padding 12px 10px
			label 
				line-height 27px
				display block

.contribuyente,
.observaciones
	float right
	border 1px solid #000
	width 100%
	border-radius 10px
	margin-left 10px
	.cabecera
		width 100%
		border-bottom 1px solid #000
		font-weight bold
	.cabecera,
	.contenido
		box-sizing border-box
		padding 10px
		label
			font-weight bold
			display block
.contribuyente
	height 130px
	margin-bottom 10px
.observaciones
	height 100px
.detalle
	padding-top 25px
	padding-bottom 25px
	.contenido
		border 1px solid #000
		border-radius 10px
		height 300px
		table
			width 100%
			border-collapse collapse
			font-size 14px
			thead
				th
					border-bottom 1px solid #000
					height 40px
					line-height 40px
			td
				padding 8px 0px
		.padding-left
			padding-left 10px
			padding-right 35px
		.padding-right
			padding-right 40px

.recibio-total
	text-align center
	overflow hidden
	.recibio
		float left
		width 400px
		margin-left 60px
		.concepto
			border-top 1px solid #000
			margin-top 5px
	.total 
		float right
		.cabecera
			display inline-block
		.contenido
			display inline-block
			border 1px solid #000
			height 30px
			line-height 30px
			width 150px
			text-align right
			padding 5px
			font-weight bold
label
	font-weight bold
.text-center
	text-align center
.text-right
	text-align right
.text-left
	text-align left