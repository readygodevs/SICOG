@model IEnumerable<TesoreriaVS12.Areas.Tesoreria.Models.VW_contrarecibosSinFuente>
@{
    var imagePath = Server.MapPath("~/Images");
    var cssPath = Server.MapPath("~/Content");
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>reporteGeneral</title>
    <link href="@cssPath/reporteGeneral.css" rel="stylesheet" />
</head>
<body>
    <div class="cabecera">
        <div class="logo">
            <img src="@imagePath/reportes/@TesoreriaVS12.Models.Logueo.GetParametro("EscudoReportes")" class="logo-ente" alt="" />
        </div>
        <div class="parametros">
            <div class="gobierno">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo1")</div>
            <div class="instituto">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo2")</div>
            <div class="ejercicio">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo3")</div>
            <div class="sistema">@TesoreriaVS12.Models.Logueo.GetParametro("Titulo4")</div>
        </div>
        <div class="poliza">
            REPORTE DE CUENTAS POR LIQUIDAR SIN CUENTA BANCARIA @Html.Raw(ViewBag.TituloMes)
        </div>
    </div>
    <table id="tblContraRecibos" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tipo Contrarecibo</th>
                <th>Folio</th>
                <th>Fecha de Captura</th>
                <th>Beneficiario</th>
                <th>Descripción</th>
                <th>Fecha de Vencimiento</th>
                <th class="text-right">Importe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @String.Format("{0}", TesoreriaVS12.Areas.Tesoreria.Models.Diccionarios.ListaTiposContrarecibos[item.Id_TipoCR])
                    </td>
                    <td width="50px">
                        @item.Id_FolioCR
                    </td>
                    <td class="text-center">
                        @if (item.FechaVen.HasValue)
                        {
                            @item.FechaCR.Value.ToShortDateString()
                        }

                    </td>
                    <td width="200px">
                        @item.Nombre
                    </td>
                    <td width="350px">
                        @item.Descripcion
                    </td>
                    <td class="text-center">
                        @if (item.FechaVen.HasValue)
                        {
                            @item.FechaVen.Value.ToShortDateString()
                        }
                    </td>
                    <td class="text-right" width="100px">
                        <b>@String.Format("{0:N}", item.Cargos)</b>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>